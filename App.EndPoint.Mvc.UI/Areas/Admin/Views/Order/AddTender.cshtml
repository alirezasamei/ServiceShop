@model TenderViewModel

@{
    ViewData["Title"] = "ایجاد پیشنهاد";
}
<div class="col-12 row">
    <div class="card-body p-0 ">
        <!-- Nested Row within Card Body -->
        <div class="row flex-row justify-content-center">
            <div class="col-lg-8">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">ایجاد پیشنهاد</h1>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form class="user" asp-area="Admin" asp-controller="Order" asp-action="AddTender" method="post" enctype="multipart/form-data">
                        <input hidden asp-for=OrderId value=@Model.OrderId />
                        <div class="form-group row">
                            <div class="container col-sm-6">
                                <select asp-for="ExpertId" class="selectpicker form-control form-control-user" aria-label="Default select example" data-live-search="true" title="انتخاب متخصص"
                                        asp-items=@(new SelectList(ViewBag.Experts,"Id","Name"))>
                                </select>
                                <span asp-validation-for="ExpertId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <input type="number" class="form-control form-control-user input" asp-for="Price" placeholder=" ">
                                <div class="cut"></div>
                                <label asp-for=Price class="placeholder"></label>
                                <span asp-validation-for=Price class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="time" class="form-control form-control-user input" asp-for="RequiredTime" placeholder=" ">
                                <div class="cut cut-long"></div>
                                <label asp-for=RequiredTime class="placeholder"></label>
                                <span asp-validation-for=RequiredTime class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <input type="datetime-local" class="form-control form-control-user input" asp-for="StartDate" placeholder=" ">
                                <div class="cut"></div>
                                <label asp-for=StartDate class="placeholder"></label>
                                <span asp-validation-for=StartDate class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="container col-sm-6">
                                <button type="submit" class="btn btn-primary btn-user btn-block mb-3 mb-sm-0">
                                    ایجاد پیشنهاد
                                </button>
                                <a class="btn btn-danger btn-user btn-block" asp-area="Admin" asp-controller="Order" asp-action="Tenders" asp-route-id="@Model.OrderId">انصراف</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>