@model OrderViewModel

@{
    ViewData["Title"] = "ایجاد سفارش";
}
<div class="col-12 row">
    <div class="card-body p-0 ">
        <!-- Nested Row within Card Body -->
        <div class="row flex-row justify-content-center">
            <div class="col-lg-8">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">ایجاد سفارش</h1>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form class="user" asp-area="Admin" asp-controller="Order" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user input" asp-for=Customer placeholder=" ">
                                <div class="cut cut-long"></div>
                                <label asp-for=Customer class="placeholder"></label>
                                <span asp-validation-for=Customer class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <input type="text" class="form-control form-control-user input" asp-for=Service placeholder=" ">
                                <div class="cut"></div>
                                <label asp-for=Service class="placeholder"></label>
                                <span asp-validation-for=Service class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="container col-sm-6">
                                <select asp-for="OrderStateId" class="selectpicker form-control form-control-user" aria-label="Default select example" data-live-search="true" title="انتخاب وضعیت سفارش"
                                        asp-items=@(new SelectList(ViewBag.OrderStates,"Id","Name"))>
                                </select>
                                <span asp-validation-for="OrderStateId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="container col-sm-6">
                                <button type="submit" class="btn btn-primary btn-user btn-block mb-3 mb-sm-0">
                                    ایجاد سفارش
                                </button>
                                <a class="btn btn-danger btn-user btn-block" asp-area="Admin" asp-controller="Order" asp-action="Index">انصراف</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>