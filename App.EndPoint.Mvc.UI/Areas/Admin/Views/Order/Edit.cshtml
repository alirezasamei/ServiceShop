@model OrderViewModel

@{
    ViewData["Title"] = "ویرایش سفارش";
}
<div class="col-12 row">
    <div class="card-body p-0 ">
        <!-- Nested Row within Card Body -->
        <div class="row flex-row justify-content-center">
            <div class="col-lg-8">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">ویرایش سفارش</h1>
                    </div>
                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                    <form class="user" asp-area="Admin" asp-controller="Order" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input hidden asp-for="Id" value="@Model.Id" />
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user input" asp-for=Customer placeholder=" ">
                                <div class="cut cut-long"></div>
                                <label asp-for=Customer class="placeholder"></label>
                                <span asp-validation-for=Customer class="text-danger"></span>
                                <input hidden asp-for=CustomerId value=@Model.CustomerId />
                            </div>
                            <div class="col-sm-6">
                                <input type="text" class="form-control form-control-user input" asp-for=Service placeholder=" ">
                                <div class="cut"></div>
                                <label asp-for=Service class="placeholder"></label>
                                <span asp-validation-for=Service class="text-danger"></span>
                                <input hidden asp-for=ServiceId value=@Model.ServiceId />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="container col-sm-6">
                                <button type="submit" class="btn btn-primary btn-user btn-block mb-3 mb-sm-0">
                                    ویرایش سفارش
                                </button>
                                <a class="btn btn-danger btn-user btn-block" asp-area="Admin" asp-controller="Order" asp-action="Index">انصراف</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>