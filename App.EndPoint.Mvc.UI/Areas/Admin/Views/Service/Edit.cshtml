@model ServiceViewModel

@{
    ViewData["Title"] = "ویرایش سرویس";
}
<div class="col-12 row">
    <div class="card-body p-0 ">
        <!-- Nested Row within Card Body -->
        <div class="row flex-row justify-content-center">
            <div class="col-lg-8">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">ویرایش سرویس</h1>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form class="user" asp-area="Admin" asp-controller="Service" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input hidden asp-for="Id" value=@Model.Id />
                        <input hidden asp-for="ImageFileId" value=@Model.ImageFileId />
                        <input hidden asp-for="ImageUrl" value=@Model.ImageUrl />
                        <input hidden asp-for="ParentServiceId" value=@Model.ParentServiceId />
                        <input hidden asp-for="CreationDate" value=@Model.CreationDate />
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user input" asp-for=Name placeholder=" ">
                                <div class="cut cut-short"></div>
                                <label asp-for=Name class="placeholder"></label>
                                <span asp-validation-for=Name class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <div class="custom-control custom-checkbox small">
                                    <input type="checkbox" class="custom-control-input" asp-for=IsActive>
                                    <label class="custom-control-label" for="customCheck">
                                        فعال
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="number" class="form-control form-control-user input" asp-for=Price placeholder=" ">
                                <div class="cut cut-medium"></div>
                                <label class="placeholder">@Html.DisplayNameFor(model=>model.Price)</label>
                                <span asp-validation-for=Price class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <textarea class="form-control form-control-user input" asp-for=Description placeholder=" "></textarea>
                                <div class="cut"></div>
                                <label class="placeholder">@Html.DisplayNameFor(model=>model.Description)</label>
                                <span asp-validation-for=Description class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="formFile" class="form-label">تصویر سرویس</label>
                            <input class="form-control" type="file" id="formFile" name="serviceImage">
                        </div>
                        <div class="container">
                            <button type="submit" class="btn btn-primary btn-user btn-block col-sm-6 mb-3 mb-sm-0">
                                ویرایش سرویس
                            </button>
                            <a class="btn btn-danger btn-user btn-block col-sm-6" asp-area="Admin" asp-controller="Service" asp-action="Index">انصراف</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>