@model UserRegisterViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "ثبت نام";
}
<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <img class="col-lg-5 d-none d-lg-block" bg-register-image src="~/img/Register.jpg"></img>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">ایجاد حساب کاربری</h1>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form class="user" asp-controller="Account" asp-action="Register" method="post">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @*<label asp-for=Name></label>*@
                                <input type="text" class="form-control form-control-user" asp-for=Name placeholder=" ">
                                <div class="cut cut-long"></div>
                                <label asp-for=Name class="placeholder"></label>
                                <span asp-validation-for=Name class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                @*<label asp-for=UserName></label>*@
                                <input type="text" class="form-control form-control-user" asp-for=UserName placeholder=" ">
                                <div class="cut"></div>
                                <label class="placeholder">@Html.DisplayNameFor(model=>model.UserName)</label>
                                <span asp-validation-for=UserName class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @*<label asp-for=Email></label>*@
                                <input type="email" class="form-control form-control-user" asp-for=Email placeholder=" ">
                                <div class="cut cut-short"></div>
                                <label class="placeholder">@Html.DisplayNameFor(model=>model.Email)</label>
                                <span asp-validation-for=Email class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                @*<label asp-for=PhoneNumber></label>*@
                                <input type="tel" class="form-control form-control-user" asp-for=PhoneNumber placeholder=" ">
                                <div class="cut"></div>
                                <label class="placeholder">@Html.DisplayNameFor(model=>model.PhoneNumber)</label>
                                <span asp-validation-for=PhoneNumber class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @*<label asp-for=Password></label>*@
                                <input type="password" class="form-control form-control-user" asp-for=Password placeholder=" ">
                                <div class="cut"></div>
                                <label  class="placeholder">@Html.DisplayNameFor(model=>model.Password)</label>
                                <span asp-validation-for=Password class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                @*<label asp-for=ConfirmPassword></label>*@
                                <input type="password" class="form-control form-control-user" asp-for=ConfirmPassword placeholder=" ">
                                <div class="cut cut-medium"></div>
                                <label class="placeholder">@Html.DisplayNameFor(model=>model.ConfirmPassword)</label>
                                <span asp-validation-for=ConfirmPassword class="text-danger"></span>
                            </div>
                        </div>
                        <input hidden asp-for=Role value=@Model.Role />
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            ثبت نام
                        </button>
                        <hr>
                        <a href="index.html" class="btn btn-google btn-user btn-block">
                            <i class="fab fa-google fa-fw"></i> ثبت نام با Google
                        </a>
                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                            <i class="fab fa-facebook-f fa-fw"></i> ثبت نام با Facebook
                        </a>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" asp-controller="Account" asp-action="Login">قبلا ثبت نام کرده اید؟ وارد شوید!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



