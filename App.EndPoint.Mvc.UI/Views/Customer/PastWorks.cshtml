@model IEnumerable<PastWorkViewModel>

@{
    ViewData["Title"] = "سابقه کارها";
    int rowCount = 1;
}
<div class="d-flex justify-content-between">
    <h3>سابقه کارها</h3>
</div>
<hr>

<table class="table table-striped table-hover text-center">
    <thead>
        <tr>
            <th scope="col">
                #
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model=>model.Expert)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model=>model.Service)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model=>model.Price)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model=>model.ComplitionDate)
            </th>
            <th scope="col">عملیات</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @(rowCount++)
                </td>
                <td>@item.Expert</td>
                <td>@item.Service</td>
                <td>@item.Price</td>
                <td>@(((DateTime) item.ComplitionDate).ToShamsi())</td>
                <td>
                    <a class="btn btn-info" asp-controller="Customer" asp-action="AddComment" asp-route-id="@item.ExpertServiceId">
                        ثبت نظر
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>