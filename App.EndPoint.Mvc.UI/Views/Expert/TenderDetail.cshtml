@model TenderViewModel

@{
    ViewData["Title"] = "مشاهده پیشنهاد";
}
<div class="col-12 row">
    <div class="card-body p-0 ">
        <!-- Nested Row within Card Body -->
        <div class="row flex-row justify-content-center">
            <div class="col-lg-8">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">مشاهده پیشنهاد</h1>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input type="number" class="form-control form-control-user input" asp-for="Price" placeholder=" " disabled>
                            <div class="cut"></div>
                            <label asp-for=Price class="placeholder"></label>
                        </div>
                        <div class="col-sm-6">
                            <input type="datetime-local" class="form-control form-control-user input" asp-for="StartDate" placeholder=" " disabled>
                            <div class="cut"></div>
                            <label asp-for=StartDate class="placeholder"></label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input type="time" class="form-control form-control-user input" asp-for="RequiredTime" placeholder=" " disabled>
                            <div class="cut cut-long"></div>
                            <label asp-for=RequiredTime class="placeholder"></label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="container col-sm-6">
                            <a class="btn btn-danger btn-user btn-block" asp-action="Orders">بازگشت</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>